<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="24dp">
<EditText
    android:id="@+id/sample_name_text"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="@string/sample_name_message"
    android:layout_marginBottom="6dp"
    android:textColor="@color/text_primary_light"/>
    <TextView
        android:id="@+id/file_name_preview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sample_name_text"
        android:textColor="@color/text_primary_light"/>
    <TextView
        android:id="@+id/file_exists_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/file_name_preview"
        android:textColor="@color/red"
        android:text="@string/file_exists_message"
        android:visibility="invisible"/>
</RelativeLayout>