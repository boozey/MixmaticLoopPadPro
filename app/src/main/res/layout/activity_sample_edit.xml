<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootLayout"
    tools:context=".SampleEditActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"/>


    <com.nakedape.mixmaticlooppad.AudioSampleView
        android:id="@+id/spectralView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/my_toolbar"/>

    <!-- Touchpad Toolbar-->
    <LinearLayout android:id="@+id/pad_toolbar"
        android:layout_width="44dp"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:background="@color/primary"
        android:translationX="0dp"
        android:visibility="visible"> <!-- -44dp -->
        <ImageButton android:id="@+id/action_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="@drawable/ic_action_select"
            android:onClick="toolBarClick"/>
        <ImageButton android:id="@+id/action_loop_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="@drawable/ic_av_loop"
            android:onClick="toolBarClick"/>
        <ImageButton android:id="@+id/action_trim_wav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="@drawable/ic_action_content_cut"
            android:onClick="toolBarClick"/>
        <ImageButton android:id="@+id/action_set_volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="@drawable/ic_av_equalizer"
            android:onClick="toolBarClick"/>
        <ImageButton android:id="@+id/action_edit_beats"
            android:layout_width="wrap_content"
            android:layout_margin="4dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_action_show_beats"
            android:onClick="toolBarClick"
            android:visibility="gone"/>
    </LinearLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_skip_back_large"
        android:contentDescription="Rewind"
        android:id="@+id/buttonRewind"
        android:onClick="Rewind"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_play_large"
        android:contentDescription="@string/play"
        android:id="@+id/buttonPlay"
        android:onClick="Play"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/buttonRewind"
        android:layout_toEndOf="@id/buttonRewind"/>
    <ImageButton
        android:id="@+id/mic_record_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/mic_button"
        android:visibility="gone"
        android:onClick="RecordButtonClick"/>

</RelativeLayout>
