<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/popup_background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
<LinearLayout
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:gravity="center_horizontal"
    android:background="@drawable/popup_background"
    android:padding="16dp"
    android:id="@+id/new_image_popup">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:text="@string/new_sample_popup_title"/>
        <ImageButton
            android:id="@+id/popup_close_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/ic_action_navigation_close"
            android:onClick="PopupCloseButtonClick"/>
    </LinearLayout>
    <TextView
        android:id="@+id/music_library_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:text="@string/music_library"
        android:gravity="center"
        android:drawableLeft="@drawable/ic_av_my_library_music_30dp"
        android:drawableStart="@drawable/ic_av_my_library_music_30dp"
        android:drawablePadding="8dp"
        android:background="@drawable/button_transparent"
        android:padding="4dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:clickable="true"
        android:onClick="PopupLibraryButtonClick"/>
    <TextView
        android:id="@+id/gallery_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:text="@string/mic_record"
        android:gravity="center"
        android:drawableLeft="@drawable/ic_av_mic_30dp"
        android:drawableStart="@drawable/ic_av_mic_30dp"
        android:drawablePadding="8dp"
        android:background="@drawable/button_transparent"
        android:padding="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        android:onClick="PopupRecordButtonClick"/>
</LinearLayout>
</RelativeLayout>