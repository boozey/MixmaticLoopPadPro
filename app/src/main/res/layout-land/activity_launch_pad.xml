<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/launch_pad_root_layout">
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:layout_marginRight="30dp"
    android:id="@+id/mainLayout">

<!-- Counter bar -->
    <RelativeLayout
        android:id="@+id/counter_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="120 BPM    00 : 00"
            android:id="@+id/textViewCounter"
            android:layout_gravity="center_vertical"
            android:layout_centerInParent="true"/>
        <ImageButton
            android:id="@+id/button_rewind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_rewind"
            android:onClick="RewindButtonClick"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>
        <ImageButton
            android:id="@+id/button_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_play"
            android:onClick="PlayButtonClick"
            android:layout_toEndOf="@id/button_rewind"
            android:layout_toRightOf="@+id/button_rewind"
            android:layout_centerVertical="true"/>
        <ImageButton
            android:id="@+id/button_fast_forward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_fforward"
            android:onClick="FastForwardButtonClick"
            android:layout_toEndOf="@id/button_play"
            android:layout_toRightOf="@+id/button_play"
            android:layout_centerVertical="true" />
    </RelativeLayout>

