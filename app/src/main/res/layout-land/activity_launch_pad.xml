    <!-- Sample Library -->
    <LinearLayout
        android:id="@+id/sample_library"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_below="@id/my_toolbar"
        android:background="@color/primary"
        android:visibility="visible"
        android:translationX="250dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/primary"
            android:onClick="SampleLibTabClick">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/ic_action_content_add"
                android:onClick="AddSampleClick"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_action_navigation_more_vert"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/ic_action_delete"
                android:onClick="DeleteSampleClick"/>
        </RelativeLayout>
        <!-- Main tray-->
        <RelativeLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- Button bar-->
            <LinearLayout android:id="@+id/sample_lib_button_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:orientation="horizontal">
                <TextView android:id="@+id/my_samples_button"
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_height="wrap_content"
                    android:text="@string/my_samples_underlined"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary_light"
                    android:onClick="MySamplesClick"
                    android:clickable="true"/>
                <TextView android:id="@+id/sample_packs_button"
                    android:layout_width="0dp"
                    android:layout_weight="12"
                    android:layout_height="wrap_content"
                    android:text="@string/sample_packs"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary_light"
                    android:onClick="SamplePacksClick"
                    android:clickable="true"/>
            </LinearLayout>
            <TextView android:id="@+id/sample_pack_empty_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/sample_lib_button_bar"
                android:layout_gravity="bottom"
                android:padding="4dp"
                android:drawableStart="@drawable/ic_shopping_bag_40dp"
                android:drawableLeft="@drawable/ic_shopping_bag_40dp"
                android:drawablePadding="8dp"
                android:layout_margin="16dp"
                android:maxWidth="250dp"
                android:text="@string/no_sample_packs_msg"
                android:textColor="@color/text_primary_light"
                android:textSize="20sp"
                android:textAlignment="center"
                android:background="@drawable/rounded_corner_accent"
                android:visibility="gone"
                android:onClick="OpenStore"
                android:clickable="true"/>
            <ListView android:id="@+id/sample_listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/sample_lib_button_bar"
                android:layout_weight="1"
                android:choiceMode="singleChoice"
                android:visibility="visible"/>
            <ListView android:id="@+id/sample_pack_listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/sample_pack_empty_view"
                android:layout_weight="1"
                android:visibility="gone"/>
            <LinearLayout android:id="@+id/selected_pack_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_below="@id/sample_pack_empty_view"
                android:padding="8dp"
                android:visibility="gone">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView android:id="@+id/image_view"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_gravity="center_vertical"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center_vertical">
                        <TextView android:id="@+id/title_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary_light"
                            android:text="Title Text"/>
                        <TextView android:id="@+id/genre_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_primary_light"
                            android:text="Genre"/>
                    </LinearLayout>
                </LinearLayout>
                <ExpandableListView android:id="@+id/sample_pack_files_listview"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:groupIndicator="@drawable/expandable_list_indicator_white"
                    android:visibility="gone"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <!-- Touchpad Toolbar-->
    <LinearLayout android:id="@+id/pad_toolbar"
        android:layout_width="44dp"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:background="@drawable/rounded_corner_2dp_primary"
        android:translationX="-44dp"
        android:visibility="visible">
        <ImageButton android:id="@+id/action_edit_sample"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:background="@drawable/ic_action_editor_mode_edit"
            android:onClick="toolBarClick"/>
        <ImageButton android:id="@+id/action_loop_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:background="@drawable/ic_av_loop"
            android:onClick="toolBarClick"/>
        <ImageButton android:id="@+id/action_launch_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:background="@drawable/ic_keyboard"
            android:onClick="toolBarClick"/>
        <ImageButton android:id="@+id/action_set_volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:background="@drawable/ic_av_equalizer"
            android:onClick="toolBarClick"/>
        <ImageButton android:id="@+id/action_quantize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:background="@drawable/ic_beat"
            android:onClick="toolBarClick"/>
        <ImageButton android:id="@+id/action_pick_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:background="@drawable/ic_palette"
            android:onClick="toolBarClick"/>
        <ImageButton android:id="@+id/action_remove_sample"
            android:layout_width="wrap_content"
            android:layout_margin="6dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_action_delete"
            android:onClick="toolBarClick"/>
    </LinearLayout>
    <TextView android:id="@+id/done_button"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        android:drawableLeft="@drawable/ic_action_done"
        android:drawableStart="@drawable/ic_action_done"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_corner_accent"
        android:text="@string/button_done"
        android:textColor="@color/text_primary_light"
        android:clickable="true"
        android:onClick="DoneButtonClick"
        android:translationY="48dp"/>
</RelativeLayout>